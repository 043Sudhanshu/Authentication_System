<html>
    <head>
        <title>signin</title>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js'></script>

        <style>
            #main{
                width:100%;
                height:100%;
                margin: auto;
                border:2px solid red;
                  display:flex;
               position: relative;
            }
            #main>div{
                width:50%;
                height:100%;
               text-align: center;
           
            }
            input{
                margin:10px;
                font-size: 20px;
            }
            #select{
               color:white;
                background-color: black;
                position: absolute;
                transition: all 4s;
            }
           
            </style>
    </head>
    <body>

          <div id="main">
          <div id="select">
                 <div id='signinButton'>
                signin
                </div>
                 <div id='signupButton'>
                signup
                 </div>
          </div>
            <div id='signup' style="background-image:url('https://images.pexels.com/photos/1591447/pexels-photo-1591447.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500');background-color: aqua;">
                <form action='/create' method='POST'>
            <input type="text" name='name' placeholder="Name"><br>
            <input type="text" name='email' placeholder="Email"><br>
            <input type="password" name='password' placeholder="password"><br>
            <input type="password" name='confirmpassword' placeholder="confirm-password"><br>
            <button type='submit'>submit</button>
                </form>
            </div>

            <div id='signin' style="background-image: url('https://i.pinimg.com/originals/af/8d/63/af8d63a477078732b79ff9d9fc60873f.jpg');">
                <form action='/session' method='POST'>
                    <input type="text" name='email' placeholder="Email"><br>
                    <input type="password" name='password' placeholder="password"><br>
                    <button type='submit'>submit</button>
                </form>
            </div>
        
        </div>
   <script src='/js/signup.js'></script>

    </body>
</html>