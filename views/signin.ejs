<html>
<head>
    <title>signin</title>  
</head> 
<link rel='stylesheet' href='/css/signin.css'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
 
<body>

    <div>
                <h1> SignIn </h1>
                    <div id='signin'>
                        <form action='/createSession' method='POST'>
                            <input type="text" name='email' placeholder="Email" required><br><br>
                            <input type="password" name='password' placeholder="password" required><br><br>
                            <button type='submit'>submit</button>
                        </form>
                    </div>
                    <div style="background-color: #42434a;">
                        <a href='/users/forgotpage' target="_blank"> forgot password? </a>
                    </div>
                   
                   <br>
                <div style="background-color: #42434a;">
                    <a href='/users/auth/google' target="_blank"> Signup by google <i class="fa fa-google"></i></a>
                </div>

                <div style="background-color: #42434a;">
                   <h5> <a href='/signup'>click here to signUp</a></h5>
                </div>
            
            <br>
  </div>

  
  <script>
       
    <%if(flash.success.length > 0){%>
        new Noty({
            theme:'sunset',
            type: 'success',
            layout: 'topRight',
            timeout:3000,
            text: '<%=flash.success%>'
        }).show();
     <%}%>
     <%if( flash.error.length > 0){%>
        new Noty({
            theme:'sunset',
            type: 'error',
            layout: 'topRight',
            timeout:3000,
            text: '<%= flash.error %>'
        }).show();
     <%}%>
    </script>
   


    </body>

</html>